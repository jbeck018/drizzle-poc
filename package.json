{
  "name": "drizzle-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun vite tsc -b && bunx --bun vite vite build",
    "server:start": "bun ./server/server",
    "preview": "bunx --bun vite preview",
    "codegen": "graphql-codegen --config codegen.ts",
    "start:db": "docker-compose up -d",
    "seed": "bun ./db/seeding/seed.ts",
    "generate": "drizzle-kit generate --config ./db/drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config ./db/drizzle.config.ts"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@graphql-yoga/plugin-defer-stream": "^3.6.3",
    "@tanstack/react-query": "^5.51.23",
    "@temporalio/activity": "^1.11.1",
    "@temporalio/client": "^1.11.1",
    "@temporalio/worker": "^1.11.1",
    "@temporalio/workflow": "^1.11.1",
    "bun": "^1.1.24",
    "classnames": "^2.5.1",
    "drizzle-graphql": "^0.8.5",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "framer-motion": "^11.3.28",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.6.3",
    "lodash": "^4.17.21",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.26.1",
    "react-use": "^17.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.13",
    "@biomejs/biome": "1.8.3",
    "@faker-js/faker": "^8.4.1",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "4.3.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript-react-query": "^6.1.0",
    "@parcel/watcher": "^2.4.1",
    "@types/bun": "^1.1.6",
    "@types/lodash": "^4.17.7",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "drizzle-kit": "^0.24.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0"
  }
}
